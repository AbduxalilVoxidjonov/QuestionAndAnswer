<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FEFAFD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="310dp">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#8A80B5"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:outlineSpotShadowColor="#8A80B5"
                app:cardBackgroundColor="#8A80B5"
                android:layout_marginStart="150dp"
                android:layout_width="280dp"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:outlineSpotShadowColor="#9287BA"
                    android:visibility="visible"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="85dp"
                    app:cardBackgroundColor="#9287BA"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/background2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:src="@drawable/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="InvalidId,MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Enter your quiz code"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:text="To play with your friends"
                    android:textSize="15sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#F6F6F6"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:hint="code"
                        android:layout_marginStart="15dp"
                        android:background="@null"
                        android:layout_width="130dp"
                        android:layout_height="50dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button"
                        android:text="Enter"
                        android:layout_gravity="center"
                        android:background="@drawable/background_button"
                        android:gravity="center"
                        android:layout_marginStart="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginStart="30dp"
        android:text="Recent quiz"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/card_math"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFF4DA"
                    android:src="@drawable/baseline_calculate_24" />
                <TextView
                    android:layout_marginStart="110dp"
                    android:text="Mathematic 1"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:src="@drawable/baseline_checklist_24"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:layout_marginStart="130dp"
                    android:text="10/10 Question"
                    android:textSize="10sp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/card_english"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFF4DA"
                    android:src="@drawable/baseline_library_books_24" />
                <TextView
                    android:layout_marginStart="110dp"
                    android:text="English Grammer"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:src="@drawable/baseline_checklist_24"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:layout_marginStart="130dp"
                    android:text="10/10 Question"
                    android:textSize="10sp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/card_information"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFF4DA"
                    android:src="@drawable/baseline_computer_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="25dp"
                    android:text="Internet and Information"
                    android:textSize="15sp"></TextView>
                <ImageView
                    android:src="@drawable/baseline_checklist_24"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:layout_marginStart="130dp"
                    android:text="10/10 Question"
                    android:textSize="10sp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/card_history"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFF4DA"
                    android:src="@drawable/baseline_history_24" />
                <TextView
                    android:layout_marginStart="110dp"
                    android:text="History"
                    android:textSize="15sp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:src="@drawable/baseline_checklist_24"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:layout_marginStart="130dp"
                    android:text="10/10 Question"
                    android:textSize="10sp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>